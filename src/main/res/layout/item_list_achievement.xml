<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_achievement_selector"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/achievement_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/main_achi" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <com.weekly.engineer.challenge.view.Text
            android:id="@+id/achievement_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_darken"
            android:textSize="30sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp">

            <com.weekly.engineer.challenge.view.AchievementProgress
                android:id="@+id/achievement_item_progress"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <com.weekly.engineer.challenge.view.Text
                android:id="@+id/achievement_item_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/red_darken" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/achievement_item_unlock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/achievement_item_unlock_two"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/achievement_item_unlock_three"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>