<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/incorrect_toast_layout"
    android:background="@drawable/toast_incorrect_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/custom_toast_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/game_incorrect_2" />

    <com.weekly.engineer.challenge.view.Text
        android:id="@+id/custom_toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/text_incorrect"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginStart="5dp" />
</LinearLayout>